<h1>Welcome to Goals With Friends</h1>

<%= form_for(@goal) do |f| %>

    <%= f.label :name %><br />
    <%= f.text_field :name %>

    <%= f.hidden_field :user_id, value: "3" %>

    <%= f.hidden_field :start_date, value:Date.today %>

    <%= f.hidden_field :end_date, value:1.year.from_now.to_date %>

    <%= f.hidden_field :status, value: "not started"%>

    <%= f.submit %>
<% end %>




<ul><% @users.each do |user| %>
<li><%= link_to image_tag(user.pic_url, width:200), user_url(user.id) %></li>
<%= user.goals.first.name%>
<% end %>
<p></p>
<%=button_tag "Login"%>

